{
  "name": "p2p-media-loader-demo",
  "private": "false",
  "version": "0.0.0",
  "type": "module",
  "exports": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:es && pnpm build:esm && pnpm build:esm-min",
    "build:es": "tsc",
    "build:esm": "vite build --mode esm",
    "build:esm-min": "vite build --mode esm-min",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rimraf lib dist build p2p-media-loader-demo-*.tgz",
    "clean-with-modules": "rimraf node_modules && pnpm clean"
  },
  "dependencies": {
    "p2p-media-loader-core": "workspace:*",
    "p2p-media-loader-hlsjs": "workspace:*",
    "p2p-media-loader-shaka": "workspace:*"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/dplayer": "^1.25.5",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "hls.js": "^1.5.7",
    "vite-plugin-node-polyfills": "^0.21.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
